                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>*@
    <div class="">
        @*<hr />*@
        <footer></footer>
    </div>
    <script src="~/Content/scripts/vendors.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
